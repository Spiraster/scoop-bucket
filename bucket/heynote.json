{
    "version": "2.2.1",
    "description": "A dedicated scratchpad for developers",
    "homepage": "https://heynote.com/",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/heyman/heynote/releases/download/v2.2.1/Heynote_2.2.1.exe#/dl.7z",
            "hash": "sha512:ac05f1fb3ab49e2eb587d57b2e2c1ad9172f814d725e5718c612cc5a44f95cae2a0e4a2045ae6dd81bc8b9aca47aa13ac40ab91371b459cc0ecd72bb11ed3695"
        }
    },
    "pre_install": [
        "Expand-7ZipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
        "Remove-Item \"$dir\\`$*\" -Recurse"
    ],
    "##": "The app breaks hard links on config.json when updating settings",
    "post_install": [
        "$appdata = \"$env:APPDATA\\Heynote\"",
        "ensure $appdata | Out-Null",
        "if (Test-Path \"$persist_dir\\config.json\") {",
        "   Copy-Item \"$persist_dir\\config.json\" \"$appdata\"",
        "} else {",
        "   $notes = \"$dir/notes\".Replace('\\', '/')",
        "   Set-Content \"$appdata\\config.json\" \"{\"\"settings\"\":{\"\"autoUpdate\"\":false,\"\"bufferPath\"\":\"\"$notes\"\"}}\"",
        "}"
    ],
    "shortcuts": [
        [
            "Heynote.exe",
            "Heynote"
        ]
    ],
    "persist": [
        "notes"
    ],
    "pre_uninstall": [
        "$config = \"$env:APPDATA\\Heynote\\config.json\"",
        "if (Test-Path \"$config\") {",
        "    Copy-Item \"$config\" \"$persist_dir\" -Force",
        "}"
    ],
    "post_uninstall": "Remove-Item \"$env:APPDATA\\Heynote\" -Recurse",
    "checkver": {
        "github": "https://github.com/heyman/heynote"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/heyman/heynote/releases/download/v$version/Heynote_$version.exe#/dl.7z"
            }
        },
        "hash": {
            "url": "$baseurl/latest.yml",
            "regex": "sha512:\\s$base64"
        }
    }
}
